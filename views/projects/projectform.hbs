<div id="new-project-page-container">
    <h3>Submit your project</h3>
    <p>Fill out the following form and describe your unique innovative project.</p>

    {{#if message}}
        <div class="alert alert-primary" role="alert">
            {{message}}
        </div>
    {{/if}}

    {{#if project}}
    <form action="/project/{{project._id}}/edit" method="POST" enctype="multipart/form-data" id="new-project-form">
    {{else}}
    <form action="/newproject" method="POST" enctype="multipart/form-data" id="new-project-form">
    {{/if}}
        <div class="form-group">
            <label for="title">Project name (mandatory):</label>
            <input type="text" name="title" id="title" class="form-control {{#if error.title }}is-invalid{{/if}}" value="{{project.title}}">
            
            {{#if error.title}}
                <div class="invalid-feedback">
                    {{error.title.message}}
                </div>
            {{/if}}
        </div>

        <div class="form-group">
            <label for="body">Project description (mandatory):</label>
            <textarea type="text" name="body" id="body" class="form-control {{#if error.body }}is-invalid{{/if}}" rows="10">{{project.body}}</textarea>
            
            {{#if error.body}}
                <div class="invalid-feedback">
                    {{error.body.message}}
                </div>
            {{/if}}
        </div>

        <div class="form-group">
            <label for="image">Supporting image as jpg or png (optional):</label>
            <input type="file" name="image" id="image" class="form-control {{#if error.image }}is-invalid{{/if}}">
            
            {{#if error.image}}
                <div class="invalid-feedback">
                    {{error.image.message}}
                </div>
            {{/if}}
        </div>
        
        <div id="btn-area">
            {{#if project}}
                <button type="submit" id="submit-new-project-btn">Update your project</button>
            {{else}}
                <button type="submit" id="submit-new-project-btn">Submit your project</button>
            {{/if}}
        </div>

    </form>

</div>